{
    "variables": {
        "vmx": "/Volumes/MUSIC/VMs/gtta-base/gtta.vmx",
        "version": null,
        "root_password": null,
        "user_password": null
    },
    "builders": [{
        "name": "gtta-{{user `version`}}",
        "type": "vmware-vmx",
        "headless": true,
        "ssh_username": "root",
        "ssh_password": "gtta",
        "ssh_port": 22,
        "vm_name": "gtta",
        "skip_compaction": true,
        "source_path": "{{user `vmx`}}",
        "output_directory": "/Volumes/MUSIC/VMs/gtta-{{user `version`}}",
        "shutdown_command": "shutdown -h now",
        "vmx_data": {
            "displayname": "gtta"
        }
    }],
    "post-processors": [],
    "provisioners": [
        {
            "type": "file",
            "source": "files",
            "destination": "/tmp"
        },
        {
            "type": "shell",
            "script": "scripts/build-distr.sh",
            "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} {{ .Path }} {{user `version`}} {{user `root_password`}} {{user `user_password`}}"
        }
    ]
}
